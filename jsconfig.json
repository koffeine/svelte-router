{
	"include": [
		"src/**/*",
		"test/**/*",
		"demo/**/*"
	],
	"compilerOptions": {
		// Type Checking
		"strict": true,

		// Modules
		"module": "preserve",
		"moduleResolution": "bundler", // svelte-check doesn't set default based on module

		// JavaScript Support
		"checkJs": true,

		// Language and Environment
		"target": "esnext",

		// Completeness
		"skipLibCheck": true
	}
}
